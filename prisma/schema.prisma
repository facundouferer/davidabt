generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("user")
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Obra {
  id        String   @id @default(cuid())
  nombre    String
  detalle   String   @db.Text
  imagenes  String[] // Array of image URLs
  seccion   String   // formas-volumenes, cosmos, pinturas, onagua, trabajos-especiales, procesos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Evento {
  id          String   @id @default(cuid())
  fecha       DateTime
  titulo      String
  lugar       String
  descripcion String   @db.Text
  imagenes    String[] // Array of image URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Curriculum {
  id              String   @id @default(cuid())
  contenido       String   @db.Text // Rich text HTML content
  fotoArtista     String?  // Artist photo URL
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

